<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
      <css src="Magento_Catalog::css/sizechart.css"/>
      <css src="Magento_Catalog::css/sizechart-custom.css"/>
    </head>
    <body>
        <move element="product.info.media" destination="content" before="-"/>
        <move element="page.main.title" destination="product.info.main" before="-"/>
        <move element="product.info.review" destination="product.info.main" before="product.info.price"/>
        <move element="product.info.details" destination="product.info.main" before="product.info.returns.container"/>

        <move element="view.addto.wishlist" destination="product.info.extrahint" before="product.view.models.button" />
        <move element="product.view.models.button" destination="product.info.extrahint" after="view.addto.wishlist" />
        <move element="prsizechart" destination="product.info.options.wrapper" />

        <referenceContainer name="content">
            <referenceContainer name="product.info.main">
                <container name="product.info.returns.container" label="Product Returns Info Container" htmlTag="div" htmlClass="returns_container" after="product.info.overview">
                    <block class="Magento\Catalog\Block\Product\View" name="product.info.returns.info" template="Magento_Catalog::product/view/returns.phtml"/>
                </container>
            </referenceContainer>

            <container name="product.info.main.after" htmlTag="div" htmlClass="row product_after_container" after="product.info.main" />
        </referenceContainer>

        <move element="product.info.upsell" destination="product.info.main.after" before="catalog.product.related" />
        <move element="catalog.product.related" destination="product.info.main.after" after="product.info.upsell" />

        <referenceContainer name="product.info.extrahint" htmlTag="div" htmlClass="row product_action_container" />

        <move element="page.messages" destination="product.info.main" before="product.info.returns.container" />

        <referenceBlock name="product.info.social" remove="true" />
        <referenceBlock name="product.info.stock.sku" remove="true" />
        <referenceBlock name="view.addto.compare" remove="true" />
        <referenceBlock name="product.info.mailto" remove="true" />
        <referenceBlock name="product.attributes" remove="true" />
        <referenceBlock name="reviews.tab" remove="true" />
        <referenceBlock name="prsizechart.style" remove="true" />
        <referenceBlock name="product.info.overview" remove="true" />

        <referenceBlock name="product.info.options.wrapper">
          <block class="Magento\Framework\View\Element\Template" after="product.info.options.configurable" name="product_sizechart_link" template="Magento_Catalog::product/view/sizechart.phtml"/>
        </referenceBlock>
    </body>
</page>
