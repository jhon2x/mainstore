<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="page.main.title" destination="main" before="-"/>

        <referenceBlock name="category.image"/>
        <referenceBlock name="category.product.addto.compare" remove="true" />
        <referenceBlock name="product_list_toolbar">
            <block class="Magento\Catalog\Block\Category\View" name="category.title.no.image" template="Magento_Catalog::category/title-no-image.phtml"/>
        </referenceBlock>

        <move element="category.description" destination="content" after="category.products" />
        <move element="category.cms" destination="content" after="category.description" />

    </body>
</page>
