    if ($productReturnable === 0 || $isSpecial || ($productReturnable === 2 &&  $returnEnable === 0)) : ?>

    <?php echo $block->getLayout()->createBlock('Magento\Cms\Block\Block')->setBlockId('product_no_returns_text')->toHtml(); ?>

<?php else : ?>

    <?php echo $block->getLayout()->createBlock('Magento\Cms\Block\Block')->setBlockId('product_returns_text')->toHtml(); ?>

<?php endif; ?>
