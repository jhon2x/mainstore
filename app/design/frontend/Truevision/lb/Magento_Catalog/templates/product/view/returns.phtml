    /** @var $_product \Magento\Catalog\Model\Product */
    /** @var $_helper \Acidgreen\Theme\Helper\Data */

    $_product = $block->getProduct();
    $_helper = $this->helper('Acidgreen\Theme\Helper\Data');

    $returnEnable = $_helper->getConfig("sales/magento_rma/enabled");
    $productReturnable = $_product->getIsReturnable();
    $isSpecial = $_helper->hasSpecialPrice($_product);
