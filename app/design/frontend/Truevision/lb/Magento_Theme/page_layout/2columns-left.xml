<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <update handle="1column"/>
    <referenceContainer name="columns">
        <container htmlTag="div" htmlClass="col-sm-4 col-md-3" before="main">
            <container name="div.sidebar.main" htmlTag="div" htmlClass="sidebar sidebar-main row">
                <container name="sidebar.main" as="sidebar_main" label="Sidebar Main"/>
            </container>
            <container name="div.sidebar.additional" htmlTag="div" htmlClass="sidebar sidebar-additional row" after="div.sidebar.main">
                <container name="sidebar.additional" as="sidebar_additional" label="Sidebar Additional"/>
            </container>
        </container>

        <referenceContainer name="main" htmlClass="column main col-sm-8 col-md-9">
        </referenceContainer>
    </referenceContainer>
</layout>
