<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
  <update handle="empty"/>
  <referenceContainer name="page.wrapper">
    <container name="header.container" as="header_container" label="Page Header Container" htmlTag="header" htmlClass="page-header" before="main.content"/>
    <container name="page.top" as="page_top" label="After Page Header" after="header.container"/>
    <container name="main-wrapper" label="Main Content Wrapper" htmlTag="div" htmlClass="main_wrapper">
      <container name="main-container24" label="Main Content Container24" htmlTag="div" htmlClass="container_24">
        <container name="main-row" htmlTag="div" htmlClass="row">
          <container name="main-container-grid" htmlTag="div" htmlClass="grid_24" />
        </container>
      </container>
    </container>
    <container name="footer-container" as="footer" before="before.body.end" label="Page Footer Container" htmlTag="footer" htmlClass="page-footer"/>
  </referenceContainer>

  <move element="main.content" destination="main-container-grid"/>
  <move element="page.messages" destination="columns.top" />
</layout>
